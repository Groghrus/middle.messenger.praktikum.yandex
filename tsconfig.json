{
  "compilerOptions": {
    // "outDir": "dist",
    "target": "ESNext",
    "declaration": false,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,

    // "esModuleInterop": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /*yp config*/
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "layout/*": ["src/layout/*"],
      "assets/*": ["src/assets/*"],
      "lib/*": ["src/lib/*"],
      "typings/*": ["src/typings/*"],
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}

